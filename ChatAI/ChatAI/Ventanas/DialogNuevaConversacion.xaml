<Window x:Class="ChatAI.Ventanas.DialogNuevaConversacion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmación"
        WindowStyle="None"
        ResizeMode="NoResize"
        Width="400" Height="200"
        Background="#6d42ea" Foreground="White"
        WindowStartupLocation="CenterScreen">

	<Grid>
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBlock Text="¿Estás seguro de que quieres borrar el chat actual?" 
                       FontSize="16" TextAlignment="Center" Margin="10"/>

			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
				<Button Background="#efefef" Content="Sí" Width="80" Margin="5" Click="Aceptar_Click"/>
				<Button Background="#efefef" Content="No" Width="80" Margin="5" Click="Cancelar_Click"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
